.main-chat
  .main-chat__group-info
    .main-chat__group-info__group-name
      = @group.name
      .main-chat__group-info__group-name__member-name
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group.id) do
      .main-chat__group-info__edit
        Edit

  .main-chat__message-list
    = render @messages
    
  .main-chat__message-form
    = form_for [@group, @message] , html:{class:"main-chat__message-form__box"} do |f|
      .main-chat__message-form__box__input
        = f.text_field :content, class: 'main-chat__message-form__box__input__message', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__message-form__box__input__image' do
          = icon('fa', 'image')
          = f.file_field :image, class: 'main-chat__message-form__box__input__image__file'
      = f.submit 'Send', class: 'main-chat__message-form__box__submit'