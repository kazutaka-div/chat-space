.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__user 
        = current_user.name
      .side-bar__user-name__box__icon
        = link_to new_group_path, class: "side-bar__user-name__box__icon__new-group" do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user) , class: "side-bar__user-name__box__icon__edit-group" do
          = icon('fa', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__box
        = link_to group_messages_path(group) do
          .side-bar__group-list__box__group
            = group.name
          .side-bar__group-list__box__message
            = group.show_last_message