.main-chat__message-list__box
  .main-chat__message-list__box__user-day
    .main-chat__message-list__box__user-day__user
      = message.user.name
    .main-chat__message-list__box__user-day__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__box__message
    - if message.content.present?
      = message.content
    .main-chat__message-list__box__message__image
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?